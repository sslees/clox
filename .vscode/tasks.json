{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc",
            "command": "gcc",
            "args": [
                "-std=c99",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wno-unused-parameter",
                "-O0",
                "-DDEBUG",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "clox",
                "*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
